@model Projekt.Models.Student

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Szczegóły</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Imię:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Nazwisko:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            Wiek:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>
       
    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj dane", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Wróć do listy studentów", "Index")
</p>
