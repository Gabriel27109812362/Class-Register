@using Projekt.Controllers
@model IEnumerable<Projekt.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Studenci</h2>

<p>
    @Html.ActionLink("Nowy student", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Imię:
        </th>
        <th>
            Nazwisko:
        </th>
        <th>
            Wiek:
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.ActionLink("Edytuj dane", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
            @Html.ActionLink("Usuń studenta", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Oceny", "Index","Grades" ,new { id = item.Id }, new {@class=""} ) |
            @Html.ActionLink("Ustawienia", "Settings","Student",new{id = item.Id}, new { @class="" }) |
        </td>
    </tr>
}

</table>
